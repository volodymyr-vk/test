{% extends 'main.html.twig' %}

{% block body %}
    <h1>Product list</h1>
    <p><td><a href="{{ path('product_new')}}">Add new product</a></td></p>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Upd</th>
                <th>Del</th>
            </tr>
        </thead>
        <tbody>
        	{% for product in products %}
            	<tr>
                    <td><a href="{{ path('product_show', { 'productId': product.id }) }}">{{ product.id }}</a></td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.description }}</td>
                    <td><a href="{{ path('product_update', { 'productId': product.id }) }}">Update</a></td>
                    <td><a href="{{ path('product_delete', { 'productId': product.id }) }}">Delete</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
   
{% endblock %}
